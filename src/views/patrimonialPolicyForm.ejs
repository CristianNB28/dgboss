<!-- Se incluye el layout del header -->
<%- include('layouts/header') %>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Pólizas</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/sistema">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Pólizas</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Agregar Póliza Individual Patrimonial</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Póliza Individual Patrimonial</h5>
                </div>
                <div class="ibox-content">
                    <div id="form-patrimonial" class="wizard-big">
                        <h1><i class="fa fa-window-maximize"></i> Póliza</h1>
                        <fieldset>
                            <form id="policy-form" action="/sistema/add-patrimonial-policy" method="POST">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Póliza</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="numero_poliza"
                                                        id="numero_poliza"
                                                        placeholder="Número *" 
                                                        class="form-control"
                                                        oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);" 
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Tomador</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="id_rif_tomador"
                                                        id="id_rif_tomador"
                                                        onkeyup="pasarNombreTomador();"
                                                        placeholder="Cédula/Rif *" 
                                                        class="form-control cedula_rif"
                                                        oninput="let p=this.selectionStart;this.value=this.value.toUpperCase().replace(/\s+/g, '');this.setSelectionRange(p, p);"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Asegurado</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="id_rif_asegurado"
                                                        id="id_rif_asegurado"
                                                        onkeyup="pasarNombreAsegurado();"
                                                        placeholder="Cédula/Rif *" 
                                                        class="form-control cedula_rif"
                                                        oninput="let p=this.selectionStart;this.value=this.value.toUpperCase().replace(/\s+/g, '');this.setSelectionRange(p, p);"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Correo Tomador</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="email"
                                                        name="correo_tomador"
                                                        id="correo_tomador"
                                                        placeholder="Correo *" 
                                                        class="form-control"
                                                        oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Correo Asegurado</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="email"
                                                        name="correo_asegurado"
                                                        id="correo_asegurado"
                                                        placeholder="Correo *" 
                                                        class="form-control"
                                                        oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Vigencia desde</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="date"
                                                        name="fecha_desde_poliza"
                                                        id="fecha_desde_poliza"
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Moneda</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="tipo_moneda_poliza" id="tipo_moneda_poliza" onchange="currencySignChange()" required>
                                                        <option value="">Seleccione *</option>
                                                        <option value="BOLÍVAR">BOLÍVAR</option>
                                                        <option value="DÓLAR">DÓLAR</option>
                                                        <option value="EUROS">EUROS</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Prima Anual</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="prima_anual_poliza"
                                                        id="prima_anual_poliza"
                                                        placeholder="Prima *" 
                                                        class="form-control currency_format"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Ramo</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="tipo_ramo_poliza">
                                                        <option value="">Seleccione</option>
                                                        <option value="TRI">TRI</option>
                                                        <option value="RCG">RCG</option>
                                                        <option value="FIDELIDAD DE EMPLEADOS">FIDELIDAD DE EMPLEADOS</option>
                                                        <option value="INCENDIO">INCENDIO</option>
                                                        <option value="RIESGOS DIVERSOS">RIESGOS DIVERSOS</option>
                                                        <option value="COMBINADO EMPRESARIAL">COMBINADO EMPRESARIAL</option>
                                                        <option value="COMBINADO RESIDENCIAL">COMBINADO RESIDENCIAL</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group" id="searchList" style="display:none">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Agentes Propios</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="nombre_agentes_propios">
                                                        <option value="">Seleccione</option>
                                                        <% ownAgents.forEach((ownAgent) => { %>
                                                            <option value="<%= ownAgent.nombre_agente_propio %> <%= ownAgent.apellido_agente_propio %>"><%= ownAgent.nombre_agente_propio %> <%= ownAgent.apellido_agente_propio %></option>
                                                        <% }); %>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Ejecutivos de Suscripción</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="nombre_ejecutivos_suscripcion" required>
                                                        <option value="">Seleccione *</option>
                                                        <% executives.forEach((executive) => { %>
                                                            <% if (executive.tipo_ejecutivo === 'SUSCRIPCIÓN') { %>
                                                                <option value="<%= executive.nombre_ejecutivo %> <%= executive.apellido_ejecutivo %>"><%= executive.nombre_ejecutivo %> <%= executive.apellido_ejecutivo %></option>
                                                            <% } %>
                                                        <% }); %>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Ejecutivos de Siniestros</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="nombre_ejecutivos_siniestros" required>
                                                        <option value="">Seleccione *</option>
                                                        <% executives.forEach((executive) => { %>
                                                            <% if (executive.tipo_ejecutivo === 'SINIESTROS') { %>
                                                                <option value="<%= executive.nombre_ejecutivo %> <%= executive.apellido_ejecutivo %>"><%= executive.nombre_ejecutivo %> <%= executive.apellido_ejecutivo %></option>
                                                            <% } %>
                                                        <% }); %>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Asegurado/Tomador</label>
                                                <div class="col-sm-9">
                                                    <div><label><input type="checkbox" name="tomador_asegurado_poliza" id="tomador_asegurado_poliza" onclick="pasarNombreTomador();"> 
                                                                ¿Asegurado mismo tomador?</label></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Nombre/Razón</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="nombre_tomador_poliza"
                                                        id="nombre_tomador_poliza"
                                                        placeholder="Nombre/Razón Social Tomador *"
                                                        class="form-control"
                                                        oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Nombre/Razón</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="nombre_asegurado"
                                                        id="nombre_asegurado"
                                                        placeholder="Nombre/Razón Social Asegurado *" 
                                                        class="form-control"
                                                        oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Deducible</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="deducible_poliza"
                                                        id="deducible_poliza"
                                                        placeholder="Deducible *" 
                                                        class="form-control currency_format"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Grupo</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="grupo_poliza"
                                                        id="grupo_poliza"
                                                        placeholder="Grupo" 
                                                        class="form-control"
                                                        oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Vigencia hasta</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="date"
                                                        name="fecha_hasta_poliza"
                                                        id="fecha_hasta_poliza"
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Aseguradora</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="nombre_aseguradora" required>
                                                        <option value="">Seleccione *</option>
                                                        <% insurers.forEach((insurer) => { %>
                                                            <option value="<%= insurer.nombre_aseguradora %>"><%= insurer.nombre_aseguradora %></option>
                                                        <% }); %>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Suma Asegurada</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="suma_asegurada_poliza"
                                                        id="suma_asegurada_poliza"
                                                        placeholder="Suma Asegurada *"
                                                        class="form-control currency_format"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Canal</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="tipo_canal_poliza" id="tipo_canal_poliza" onchange="showList()" required>
                                                        <option value="">Seleccione *</option>
                                                        <option value="REDES SOCIALES">REDES SOCIALES</option>
                                                        <option value="PÁGINA WEB">PÁGINA WEB</option>
                                                        <option value="ÁREA BY ATINA">ÁREA BY ATINA</option>
                                                        <option value="AGENTE PROPIO">AGENTE PROPIO</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Tasa</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="tasa_poliza"
                                                        id="tasa_poliza"
                                                        placeholder="Tasa Póliza *" 
                                                        class="form-control number_format"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Ejecutivos de Cobranzas</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="nombre_ejecutivos_cobranzas" required>
                                                        <option value="">Seleccione *</option>
                                                        <% executives.forEach((executive) => { %>
                                                            <% if (executive.tipo_ejecutivo === 'COBRANZAS') { %>
                                                                <option value="<%= executive.nombre_ejecutivo %> <%= executive.apellido_ejecutivo %>"><%= executive.nombre_ejecutivo %> <%= executive.apellido_ejecutivo %></option>
                                                            <% } %>
                                                        <% }); %>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </fieldset>
                        <h1><i class="fa fa-file-text-o"></i> Recibo</h1>
                        <fieldset>
                            <form id="receipt-form" action="/sistema/add-patrimonial-receipt" method="POST">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Número</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="numero_recibo"
                                                        id="numero_recibo"
                                                        placeholder="Número de Recibo *" 
                                                        class="form-control"
                                                        oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row" id="radioContainer">
                                                <label class="col-sm-3 col-form-label">Fraccionamiento</label>
                                                <div class="col-sm-9">
                                                    <div>
                                                        <label><input type="checkbox" name="fraccionamiento_boolean_recibo" id="fraccionamiento_boolean_recibo" onclick="premiumCalculationDate()"> 
                                                                ¿Aplica Fraccionamiento?
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div id="active-select-1">
                                            <div class="form-group">
                                                <div class="form-group row"><label class="col-sm-3 col-form-label">Tipo</label>
                                                    <div class="col-sm-9">
                                                        <select class="form-control" name="tipo_fraccionamiento_recibo" id="tipo_fraccionamiento_recibo" onchange="premiumCalculationDate()">
                                                            <option value="">Seleccione</option>
                                                            <option value="MENSUAL">MENSUAL</option>
                                                            <option value="BIMESTRAL">BIMESTRAL</option>
                                                            <option value="TRIMESTRAL">TRIMESTRAL</option>
                                                            <option value="SEMESTRAL">SEMESTRAL</option>
                                                            <option value="ANUAL">ANUAL</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="form-group row"><label class="col-sm-3 col-form-label">Vigencia Desde</label>
                                                    <div class="col-sm-9">
                                                        <input 
                                                            type="date"
                                                            name="fecha_desde_recibo"
                                                            id="fecha_desde_recibo" 
                                                            class="form-control"
                                                        >
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="form-group row"><label class="col-sm-3 col-form-label">Fecha de Pago</label>
                                                    <div class="col-sm-9">
                                                        <input 
                                                            type="date"
                                                            name="fecha_pago_recibo"
                                                            id="fecha_pago_recibo" 
                                                            class="form-control"
                                                        >
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% if (typeof(policy) !== 'undefined') { %>
                                            <div class="form-group">
                                                <div class="form-group row"><label class="col-sm-3 col-form-label">Prima</label>
                                                    <div class="col-sm-9">
                                                        <input 
                                                            type="text" 
                                                            name="monto_prima_recibo"
                                                            id="monto_prima_recibo"
                                                            value="<%= primaPoliza %>" 
                                                            class="form-control currency_format_number"
                                                            required
                                                        >
                                                    </div>
                                                </div>
                                            </div>
                                        <% } else { %>
                                            <div class="form-group">
                                                <div class="form-group row"><label class="col-sm-3 col-form-label">Prima</label>
                                                    <div class="col-sm-9">
                                                        <input 
                                                            type="text" 
                                                            name="monto_prima_recibo"
                                                            id="monto_prima_recibo"
                                                            placeholder="Monto Prima *" 
                                                            class="form-control currency_format_number"
                                                            required
                                                        >
                                                    </div>
                                                </div>
                                            </div>
                                        <% } %>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Tipo de recibo</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="tipo_recibo" required>
                                                        <option value="">Seleccione *</option>
                                                        <option value="EMISIÓN">EMISIÓN</option>
                                                        <option value="RENOVACIÓN">RENOVACIÓN</option>
                                                        <option value="MODIFICACIÓN">MODIFICACIÓN</option>
                                                        <option value="FACTURACIÓN">FACTURACIÓN</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Método de Pago</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="metodo_pago_recibo" required>
                                                        <option value="">Seleccione *</option>
                                                        <option value="TRANSFERENCIA">TRANSFERENCIA</option>
                                                        <option value="ZELLE">ZELLE</option>
                                                        <option value="EFECTIVO">EFECTIVO</option>
                                                        <option value="TARJETA DE DÉBITO">TARJETA DE DÉBITO</option>
                                                        <option value="TARJETA DE CRÉDITO">TARJETA DE CRÉDITO</option>
                                                        <option value="PAYPAL">PAYPAL</option>
                                                        <option value="DEPOSITO BANCARIO">DEPOSITO BANCARIO</option>
                                                        <option value="FINANCIAMIENTO">FINANCIAMIENTO</option>
                                                        <option value="OTROS">OTROS</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div id="active-select-2">
                                            <div class="form-group">
                                                <div class="form-group row"><label class="col-sm-3 col-form-label">Número de Pagos</label>
                                                    <div class="col-sm-9">
                                                        <input 
                                                            type="number"
                                                            step="0.01" 
                                                            name="numero_pago_recibo"
                                                            id="numero_pago_recibo"
                                                            value="0" 
                                                            class="form-control"
                                                            onkeyup="premiumCalculationDate();"
                                                        >
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="form-group row"><label class="col-sm-3 col-form-label">Vigencia Hasta</label>
                                                    <div class="col-sm-9">
                                                        <input 
                                                            type="date"
                                                            name="fecha_hasta_recibo"
                                                            id="fecha_hasta_recibo"
                                                            class="form-control"
                                                        >
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Comisión Asociada</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text" 
                                                        name="monto_comision_recibo"
                                                        id="monto_comision_recibo"
                                                        placeholder="Comisión Asociada *" 
                                                        class="form-control currency_format_number"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </fieldset>
                        <h1><i class="fa fa-usd"></i> Comisión</h1>
                        <fieldset>
                            <form id="commission-form" action="/sistema/add-patrimonial-commission" method="POST">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <% if (typeof(ownAgent) !== 'undefined') { %>
                                                <div class="form-group row"><label class="col-sm-3 col-form-label">Agente Propio</label>
                                                    <div class="col-sm-9">
                                                        <input 
                                                            type="text"
                                                            name="porcentaje_agente_comision"
                                                            id="porcentaje_agente_comision"
                                                            value="<%= porcentajeAgentePropio %>"
                                                            class="form-control number_format"
                                                            required
                                                        >
                                                    </div>
                                                </div>
                                            <% } else { %>
                                                <div class="form-group row"><label class="col-sm-3 col-form-label">Agente Propio</label>
                                                    <div class="col-sm-9">
                                                        <input 
                                                            type="text" 
