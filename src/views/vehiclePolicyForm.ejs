                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Carrocería</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="serial_corroceria"
                                                        id="serial_corroceria"
                                                        placeholder="Carrocería Serial" 
                                                        class="form-control"
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Conductor</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="id_rif_conductor"
                                                        id="id_rif_conductor"
                                                        placeholder="Cédula/Rif" 
                                                        class="form-control"
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Carga</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="number"
