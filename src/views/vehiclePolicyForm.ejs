                        <h1><i class="fa fa-file-text-o"></i> Recibo</h1>
                        <fieldset>
                            <form id="receipt-form" action="/sistema/add-vehicle-receipt" method="POST">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Número</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="number"
