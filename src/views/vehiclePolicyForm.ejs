<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Póliza Individual Vehículo</h5>
                </div>
                <div class="ibox-content">
                    <div id="form" class="wizard-big wizard-health">
                        <h1><i class="fa fa-window-maximize"></i> Póliza</h1>
                        <fieldset>
                            <form id="policy-form" action="/sistema/add-vehicle-policy" method="POST">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Póliza</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="numero_poliza"
                                                        id="numero_poliza"
                                                        placeholder="Número *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Tomador</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="id_rif_tomador"
                                                        id="id_rif_tomador"
                                                        onkeyup="pasarNombreTomador();"
                                                        placeholder="Cédula/Rif *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Asegurado</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="id_rif_asegurado"
                                                        id="id_rif_asegurado"
                                                        onkeyup="pasarNombreAsegurado();"
                                                        placeholder="Cédula/Rif *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Correo Tomador</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="email"
                                                        name="correo_tomador"
                                                        id="correo_tomador"
                                                        placeholder="Correo *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Correo Asegurado</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="email"
                                                        name="correo_asegurado"
                                                        id="correo_asegurado"
                                                        placeholder="Correo *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Vigencia desde</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="date"
                                                        name="fecha_desde_poliza"
                                                        id="fecha_desde_poliza"
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Moneda</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="tipo_moneda_poliza" required>
                                                        <option value="">Seleccione *</option>
                                                        <option value="Bolivar">Bolivar</option>
                                                        <option value="Dólar">Dólar</option>
                                                        <option value="Euros">Euros</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Prima</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="number"
                                                        step="0.01"
                                                        name="prima_anual_poliza"
                                                        id="prima_anual_poliza"
                                                        placeholder="Prima Anual *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Producto</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="tipo_producto_poliza" required>
                                                        <option value="">Seleccione *</option>
                                                        <option value="Perdida Total">Perdida Total</option>
                                                        <option value="Cobertura Amplia">Cobertura Amplia</option>
                                                        <option value="RCV">RCV</option>
                                                        <option value="RCV con grúa">RCV con grúa</option>
                                                        <option value="RCG">RCG</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Tasa</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="number"
                                                        step="0.01"
                                                        name="tasa_poliza"
                                                        id="tasa_poliza"
                                                        placeholder="Tasa Póliza *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Asegurado/Tomador</label>
                                                <div class="col-sm-9">
                                                    <div><label><input type="checkbox" name="tomador_asegurado_poliza" id="tomador_asegurado_poliza" onclick="pasarNombreTomador();"> 
                                                                ¿Asegurado mismo tomador?</label></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Nombre/Razón</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="nombre_tomador_poliza"
                                                        id="nombre_tomador_poliza"
                                                        placeholder="Nombre/Razón Social Tomador *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Nombre/Razón</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="nombre_asegurado"
                                                        id="nombre_asegurado"
                                                        placeholder="Nombre/Razón Social Asegurado *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Deducible</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="number"
                                                        step="0.01"
                                                        name="deducible_poliza"
                                                        id="deducible_poliza"
                                                        placeholder="Deducible *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Grupo</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="grupo_poliza"
                                                        id="grupo_poliza"
                                                        placeholder="Grupo" 
                                                        class="form-control"
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Vigencia hasta</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="date"
                                                        name="fecha_hasta_poliza"
                                                        id="fecha_hasta_poliza"
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Aseguradora</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="nombre_aseguradora" required>
                                                        <option value="">Seleccione *</option>
                                                        <% insurers.forEach((insurer) => { %>
                                                            <option value="<%= insurer.nombre_aseguradora %>"><%= insurer.nombre_aseguradora %></option>
                                                        <% }); %>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Suma Asegurada</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="number"
                                                        step="0.01"
                                                        name="suma_asegurada_poliza"
                                                        id="suma_asegurada_poliza"
                                                        placeholder="Suma Asegurada *"
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Canal</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="tipo_canal_poliza" required>
                                                        <option value="">Seleccione *</option>
                                                        <option value="Redes Sociales">Redes Sociales</option>
                                                        <option value="Página Web">Página Web</option>
                                                        <option value="Área By Atina">Área By Atina</option>
                                                        <option value="Agente Propio">Agente Propio</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </fieldset>
                        <h1><i class="fa fa-automobile"></i> Vehículo</h1>
                        <fieldset>
                            <form id="extra-form" action="/sistema/add-vehicle" method="POST">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Placa</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="numero_placa"
                                                        id="numero_placa"
                                                        placeholder="Número *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Marca</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="marca_vehiculo"
                                                        id="marca_vehiculo"
                                                        placeholder="Marca *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Versión</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="version_vehiculo"
                                                        id="version_vehiculo"
                                                        placeholder="Versión *" 
                                                        class="form-control"
