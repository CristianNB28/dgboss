<!-- Se incluye el layout del header -->
<%- include('layouts/header') %>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Pólizas</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/sistema">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Pólizas</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Editar Póliza Beneficiario</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">
                <form action="/sistema/update-policy-beneficiary" method="POST">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Nombre</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="nombre_beneficiario"
                                                id="nombre_beneficiario"
                                                value="<%= beneficiary.nombre_beneficiario %>"
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Apellido</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="apellido_beneficiario"
                                                id="apellido_beneficiario"
                                                value="<%= beneficiary.apellido_beneficiario %>" 
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Cédula</label>
                                        <div class="col-sm-9 field">
                                            <div class="numeral-selector selector">
                                                <div class="select-box-wrapper">
                                                    <select name="tipo_cedula_beneficiario" id="select_box">
                                                        <option value="<%= beneficiary.tipo_cedula_beneficiario %>"><%= beneficiary.tipo_cedula_beneficiario %></option>
                                                        <option value="V">V</option>
                                                        <option value="E">E</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <input 
                                                type="text"
                                                name="cedula_beneficiario"
                                                id="cedula_beneficiario"
                                                value="<%= beneficiary.cedula_beneficiario %>"
                                                class="form-control input-numeral-cedula"
                                                required
                                            >
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Parentesco</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="parentesco_beneficiario" id="parentesco_beneficiario" required>
                                                <option value="<%= beneficiary.parentesco_beneficiario %>"><%= beneficiary.parentesco_beneficiario %></option>
                                                <option value="PADRE">PADRE</option>
                                                <option value="MADRE">MADRE</option>
                                                <option value="CÓNYUGE">CÓNYUGE</option>
                                                <option value="HIJO">HIJO</option>
                                                <option value="HIJA">HIJA</option>
                                                <option value="SUEGRO">SUEGRO</option>
                                                <option value="SUEGRA">SUEGRA</option>
                                                <option value="HERMANO">HERMANO</option>
                                                <option value="HERMANA">HERMANA</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Fecha Nacimiento</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="date"
                                                name="fec_nac_beneficiario"
                                                id="fec_nac_beneficiario"
                                                value="<%= fechaNacBeneficiario %>"
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="hidden"
                                                name="id_beneficiario"
                                                id="id_beneficiario"  
                                                value="<%= beneficiary.id_beneficiario %>" 
                                                class="form-control"
                                            >
                                        </div>
                                    </div>
                                    </br>
                                    </br>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <div class="col-sm-12 col-sm-offset-2">
                            <a href="/sistema/policies-detail/<%= idPolicy.poliza_id %>" class="btn btn-white btn-sm">Cancelar</a>
                            <button class="btn btn-primary btn-sm" type="submit">Guardar Cambios</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Se incluye el layout del footer -->
<%- include('layouts/footer') %>