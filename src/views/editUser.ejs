<!-- Se incluye el layout del header -->
<%- include('layouts/header') %>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Gestión de Usuarios</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/sistema">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Gestión de Usuarios</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Editar Usuario</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">
                <form method="POST" action="/sistema/update-user">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="ibox">
                                <div class="form-control">
                                    <% if ((user.cedula_usuario === null) || (user.cedula_usuario === '')) { %>
                                        <div class="form-group row"><label class="col-sm-2 col-form-label">Cédula/Rif</label>
                                            <div class="col-sm-10">
                                                <input 
                                                    type="text"
                                                    name="rif_usuario"
                                                    id="rif_usuario"
                                                    value="<%= user.rif_usuario %>"
                                                    class="form-control"
                                                    required
                                                >
                                            </div>
                                        </div>
                                    <% } else { %>
                                        <div class="form-group row"><label class="col-sm-2 col-form-label">Cédula/Rif</label>
                                            <div class="col-sm-10">
                                                <input 
                                                    type="text"
                                                    name="cedula_usuario"
                                                    id="cedula_usuario"
                                                    value="<%= user.cedula_usuario %>"
                                                    class="form-control"
                                                    required
                                                >
                                            </div>
                                        </div>
                                    <% } %>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Usuario</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="username"
                                                id="username" 
                                                value="<%= user.username %>"
                                                class="form-control"
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Clave</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="password"
                                                name="password_usuario"
                                                id="password_usuario"
                                                value="<%= user.password_usuario %>"
                                                class="form-control" 
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Email</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="email"
                                                name="email_usuario"
                                                id="email_usuario" 
                                                value="<%= user.correo_usuario %>" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Dirección</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="direccion_usuario"
                                                id="direccion_usuario"
                                                value="<%= user.direccion_usuario %>"
                                                class="form-control" 
                                            >
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Nombre</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="nombre_usuario"
                                                id="nombre_usuario"
                                                value="<%= user.nombre_usuario %>" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Rol</label>
                                        <div class="col-sm-10">
                                            <select class="form-control" name="rol">
                                                <option selected value="<%= rol.nombre_rol %>"><%= rol.nombre_rol %></option>
                                                <% roles.forEach((rol) => { %>
                                                    <option value="<%= rol.nombre_rol %>"><%= rol.nombre_rol %></option> 
                                                <% }); %> 
                                            </select>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Cargo</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="cargo_usuario"
                                                id="cargo_usuario"
                                                value="<%= user.cargo_usuario %>"
                                                class="form-control" 
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Teléfono</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="telefono_usuario"
                                                id="telefono_usuario" 
                                                value="<%= user.telefono_usuario %>" 
                                                class="form-control"
                                            >
                                        </div>
                                    </div>
                                    </br>
                                    </br>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label"></label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="hidden"
                                                name="password_confirm"
                                                id="password_confirm"
                                                value="<%= user.password_usuario %>"
                                                class="form-control"
                                            >
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Productor</label>
                                        <div class="col-sm-9">
                                            <div><label><input 
                                                            type="checkbox" 
                                                            name="productor"
                                                            <%= user.productor_boolean === 1 ? 'checked': '' %>
                                                        > ¿Usuario es Productor?</label></div>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Admin</label>
                                        <div class="col-sm-9">
                                            <div><label><input 
                                                            type="checkbox" 
                                                            name="admin"
                                                            <%= user.administrador_boolean === 1 ? 'checked': '' %>
                                                        > ¿Usuario es Administrador?</label></div>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Linea de Negocio</label>
                                        <div class="col-sm-9">
                                            <div><label><input 
                                                            type="checkbox" 
                                                            name="negocio"
                                                            value="Auto"
                                                            <%= user.tipo_linea_negocio === 'Auto' ? 'checked': '' %>
                                                        /> Auto</label></div>
                                            <div><label><input 
                                                            type="checkbox" 
                                                            name="negocio"
                                                            value="Patrimonial"
                                                            <%= user.tipo_linea_negocio === 'Patrimonial' ? 'checked': '' %>
                                                        /> Patrimonial</label></div>
                                            <div><label><input 
                                                            type="checkbox" 
                                                            name="negocio"
                                                            value="Persona"
                                                            <%= user.tipo_linea_negocio === 'Persona' ? 'checked': '' %>
                                                        /> Persona</label></div>
                                        </div>
                                    </div>
                                    </br>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label"></label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="hidden"
                                                name="id_usuario"
                                                id="id_usuario" 
                                                value="<%= user.id_usuario %>" 
                                                class="form-control"
                                            >
                                        </div>
                                    </div>
                                    </br>
                                    </br>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-white btn-sm" type="submit">Cancelar</button>
                            <button class="btn btn-primary btn-sm" type="submit">Guardar Cambios</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Se incluye el layout del footer -->
<%- include('layouts/footer') %>