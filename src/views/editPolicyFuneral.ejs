<!-- Se incluye el layout del header -->
<%- include('layouts/header') %>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Póliza</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/sistema">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Póliza</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Editar Póliza Funerario</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">
                <form action="/sistema/update-policy-funeral" method="POST">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Póliza No.</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="numero_poliza"
                                                id="numero_poliza"
                                                value="<%= policy.numero_poliza %>"
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Tomador</label>
                                        <div class="col-sm-9 field">
                                            <div class="numeral-selector selector">
                                                <div class="select-box-wrapper">
                                                    <select name="tipo_id_rif_tomador" id="select_box">
                                                        <option value="<%= policy.tipo_id_rif_tomador %>"><%= policy.tipo_id_rif_tomador %></option>
                                                        <option value="V">V</option>
                                                        <option value="E">E</option>
                                                        <option value="J">J</option>
                                                        <option value="G">G</option>
                                                        <option value="I">I</option>
                                                        <option value="F">F</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <input 
                                                type="text"
                                                name="id_rif_tomador"
                                                id="id_rif_tomador"
                                                value="<%= policy.id_rif_tomador %>"
                                                onkeyup="pasarNombreTomador();" 
                                                class="form-control input-numeral"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Nombre/Razón</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="nombre_tomador_poliza"
                                                id="nombre_tomador_poliza"
                                                value="<%= policy.nombre_tomador_poliza %>"
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Correo Tomador</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="email"
                                                name="correo_tomador"
                                                id="correo_tomador"
                                                value="<%= policy.correo_tomador %>"
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Asegurado/Tomador</label>
                                        <div class="col-sm-9">
                                            <div><label><input 
                                                            type="checkbox" 
                                                            name="tomador_asegurado_poliza" 
                                                            id="tomador_asegurado_poliza" 
                                                            onclick="pasarNombreTomador();"
                                                            <%= policy.tomador_asegurado_poliza === 1 ? 'checked': '' %>
                                                        > 
                                                        ¿Asegurado mismo tomador?</label></div>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <% if (legalInsured === undefined) { %>
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Asegurado</label>
                                            <div class="col-sm-9 field">
                                                <div class="numeral-selector selector">
                                                    <div class="select-box-wrapper">
                                                        <select name="tipo_id_rif_asegurado" id="select_box2">
                                                            <option value="<%= naturalInsured.tipo_cedula_asegurado_per_nat %>"><%= naturalInsured.tipo_cedula_asegurado_per_nat %></option>
                                                            <option value="V">V</option>
                                                            <option value="E">E</option>
                                                            <option value="J">J</option>
                                                            <option value="G">G</option>
                                                            <option value="I">I</option>
                                                            <option value="F">F</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <input 
                                                    type="text"
                                                    name="id_rif_asegurado"
                                                    id="id_rif_asegurado"
                                                    onkeyup="pasarNombreAsegurado();"
                                                    value="<%= naturalInsured.cedula_asegurado_per_nat %>"
                                                    class="form-control input-numeral2"
                                                    required
                                                >
                                            </div>
                                        </div>
                                        <div class="hr-line-dashed"></div>
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Nombre/Razón</label>
                                            <div class="col-sm-9">
                                                <input 
                                                    type="text"
                                                    name="nombre_asegurado"
                                                    id="nombre_asegurado"
                                                    value="<%= naturalInsured.nombre_asegurado_per_nat %> <%= naturalInsured.apellido_asegurado_per_nat %>"
                                                    class="form-control"
                                                    oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                    required
                                                >
                                            </div>
                                        </div>
                                        <div class="hr-line-dashed"></div>
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Correo Asegurado</label>
                                            <div class="col-sm-9">
                                                <input 
                                                    type="email"
                                                    name="correo_asegurado"
                                                    id="correo_asegurado"
                                                    value="<%= naturalInsured.correo_asegurado_per_nat %>" 
                                                    class="form-control"
                                                    required
                                                >
                                            </div>
                                        </div>
                                    <% } else if (naturalInsured === undefined) { %>
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Asegurado</label>
                                            <div class="col-sm-9 field">
                                                <div class="numeral-selector selector">
                                                    <div class="select-box-wrapper">
                                                        <select name="tipo_id_rif_asegurado" id="select_box2">
                                                            <option value="<%= legalInsured.tipo_rif_asegurado_per_jur %>"><%= legalInsured.tipo_rif_asegurado_per_jur %></option>
                                                            <option value="V">V</option>
                                                            <option value="E">E</option>
                                                            <option value="J">J</option>
                                                            <option value="G">G</option>
                                                            <option value="I">I</option>
                                                            <option value="F">F</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <input 
                                                    type="text"
                                                    name="id_rif_asegurado"
                                                    id="id_rif_asegurado"
                                                    onkeyup="pasarNombreAsegurado();"
                                                    value="<%= legalInsured.rif_asegurado_per_jur %>"
                                                    class="form-control input-numeral2"
                                                    required
                                                >
                                            </div>
                                        </div>
                                        <div class="hr-line-dashed"></div>
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Nombre/Razón</label>
                                            <div class="col-sm-9">
                                                <input 
                                                    type="text"
                                                    name="nombre_asegurado"
                                                    id="nombre_asegurado"
                                                    value="<%= legalInsured.razon_social_per_jur %>"
                                                    class="form-control"
                                                    oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                    required
                                                >
                                            </div>
                                        </div>
                                        <div class="hr-line-dashed"></div>
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Correo Asegurado</label>
                                            <div class="col-sm-9">
                                                <input 
                                                    type="email"
                                                    name="correo_asegurado"
                                                    id="correo_asegurado"
                                                    value="<%= legalInsured.correo_asegurado_per_jur %>" 
                                                    class="form-control"
                                                    required
                                                >
                                            </div>
                                        </div>
                                    <% } %>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Aseguradora</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="nombre_aseguradora" required>
                                                <option value="<%= insurer.nombre_aseguradora %>"><%= insurer.nombre_aseguradora %></option>
                                                <% insurers.forEach((insurer) => { %>
                                                    <option value="<%= insurer.nombre_aseguradora %>"><%= insurer.nombre_aseguradora %></option>
                                                <% }); %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Vigencia desde</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="date"
                                                name="fecha_desde_poliza"
                                                id="fecha_desde_poliza"
                                                value="<%= fechaDesdePoliza %>"
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Vigencia hasta</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="date"
                                                name="fecha_hasta_poliza"
                                                id="fecha_hasta_poliza"
                                                value="<%= fechaHastaPoliza %>"
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Suma Asegurada</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="suma_asegurada_poliza"
                                                id="suma_asegurada_poliza"
                                                value="<%= montoSumaAsegurada %>"
                                                class="form-control currency_format"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Deducible</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="deducible_poliza"
                                                id="deducible_poliza"
                                                value="<%= montoDeducible %>" 
                                                class="form-control currency_format"
                                                required
                                            >
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Grupo</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="grupo_poliza"
                                                id="grupo_poliza"
                                                value="<%= policy.grupo_poliza %>" 
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Moneda</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="tipo_moneda_poliza" id="tipo_moneda_poliza" onchange="currencySignChange()" required>
                                                <option value="<%= policy.tipo_moneda_poliza %>"><%= policy.tipo_moneda_poliza %></option>
                                                <option value="BOLÍVAR">BOLÍVAR</option>
                                                <option value="DÓLAR">DÓLAR</option>
                                                <option value="EUROS">EUROS</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Prima Neta</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="prima_neta_poliza"
                                                id="prima_neta_poliza"
                                                value="<%= montoPrimaNeta %>" 
                                                class="form-control currency_format"
                                                onkeyup="premiumCalculation()"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">IGTF</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="igtf_poliza"
                                                id="igtf_poliza"
                                                value="<%= montoIgtf %>" 
                                                class="form-control currency_format"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Total Prima</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="prima_total_poliza"
                                                id="prima_total_poliza"
                                                value="<%= montoPrimaTotal %>" 
                                                class="form-control currency_format"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row" id="radioContainer">
                                        <label class="col-sm-3 col-form-label">Fraccionamiento</label>
                                        <div class="col-sm-9">
                                            <div>
                                                <label><input 
                                                            type="checkbox" 
                                                            name="fraccionamiento_boolean_poliza" 
                                                            id="fraccionamiento_boolean_poliza"
                                                            onclick="premiumCalculationDate()"
                                                            <%= policy.fraccionamiento_boolean_poliza === 1 ? 'checked': '' %> 
                                                        >  
                                                        ¿Aplica Fraccionamiento?
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="active-select-1">
                                        <div class="hr-line-dashed"></div>
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Tipo</label>
                                            <div class="col-sm-9">
                                                <select class="form-control" name="tipo_fraccionamiento_poliza" id="tipo_fraccionamiento_poliza" onchange="premiumCalculationDate()">
                                                    <option value="<%= policy.tipo_fraccionamiento_poliza %>"><%= policy.tipo_fraccionamiento_poliza %></option>
                                                    <option value="MENSUAL">MENSUAL</option>
                                                    <option value="BIMESTRAL">BIMESTRAL</option>
                                                    <option value="TRIMESTRAL">TRIMESTRAL</option>
                                                    <option value="SEMESTRAL">SEMESTRAL</option>
                                                    <option value="ANUAL">ANUAL</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="hr-line-dashed"></div>
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Número de Pagos</label>
                                            <div class="col-sm-9">
                                                <input 
                                                    type="number"
                                                    step="0.01"
                                                    name="numero_pago_poliza"
                                                    id="numero_pago_poliza"
                                                    value="<%= policy.numero_pago_poliza %>" 
                                                    class="form-control"
                                                >
                                            </div>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Canal</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="tipo_canal_poliza" id="tipo_canal_poliza" onchange="showList()" required>
                                                <option value="<%= policy.tipo_canal_poliza %>"><%= policy.tipo_canal_poliza %></option>
                                                <option value="REDES SOCIALES">REDES SOCIALES</option>
                                                <option value="PÁGINA WEB">PÁGINA WEB</option>
                                                <option value="ÁREA BY ATINA">ÁREA BY ATINA</option>
                                                <option value="AGENTE PROPIO">AGENTE PROPIO</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group" id="searchList" style="display:none">
                                        <% if (ownAgent === undefined) { %>
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Agentes Propios</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="nombre_agentes_propios" id="nombre_agentes_propios">
                                                        <option value="">Seleccione</option>
                                                        <% ownAgents.forEach((ownAgent) => { %>
                                                            <option value="<%= ownAgent.nombre_agente_propio %> <%= ownAgent.apellido_agente_propio %>"><%= ownAgent.nombre_agente_propio %> <%= ownAgent.apellido_agente_propio %></option>
                                                        <% }); %>
                                                    </select>
                                                </div>
                                            </div>
                                        <% } else { %>
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Agentes Propios</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="nombre_agentes_propios" id="nombre_agentes_propios">
                                                        <option value="<%= ownAgent.nombre_agente_propio %> <%= ownAgent.apellido_agente_propio %>"><%= ownAgent.nombre_agente_propio %> <%= ownAgent.apellido_agente_propio %></option>
                                                        <% ownAgents.forEach((ownAgent) => { %>
                                                            <option value="<%= ownAgent.nombre_agente_propio %> <%= ownAgent.apellido_agente_propio %>"><%= ownAgent.nombre_agente_propio %> <%= ownAgent.apellido_agente_propio %></option>
                                                        <% }); %>
                                                    </select>
                                                </div>
                                            </div>
                                        <% } %>
                                        <div class="hr-line-dashed"></div>
                                    </div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Coordinador Suscripción</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="nombre_ejecutivo_coordinador" required>
                                                <option value="<%= executivesNames[0] %>"><%= executivesNames[0] %></option>
                                                <% executives.forEach((executive) => { %>
                                                    <% if (executive.departamento_cargo_ejecutivo === 'SUSCRIPCIÓN INDIVIDUAL') { %>
                                                        <option value="<%= executive.nombre_ejecutivo %> <%= executive.apellido_ejecutivo %>"><%= executive.nombre_ejecutivo %> <%= executive.apellido_ejecutivo %></option>
                                                    <% } %>
                                                <% }); %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Ejecutivo de Suscripción</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="nombre_ejecutivo_suscripcion" required>
                                                <option value="<%= executivesNames[1] %>"><%= executivesNames[1] %></option>
                                                <% executives.forEach((executive) => { %>
                                                    <% if (executive.departamento_cargo_ejecutivo === 'SUSCRIPCIÓN') { %>
                                                        <option value="<%= executive.nombre_ejecutivo %> <%= executive.apellido_ejecutivo %>"><%= executive.nombre_ejecutivo %> <%= executive.apellido_ejecutivo %></option>
                                                    <% } %>
                                                <% }); %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Ejecutivo de Siniestros</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="nombre_ejecutivo_siniestros" required>
                                                <option value="<%= executivesNames[2] %>"><%= executivesNames[2] %></option>
                                                <% executives.forEach((executive) => { %>
                                                    <% if (executive.departamento_cargo_ejecutivo === 'SINIESTROS') { %>
                                                        <option value="<%= executive.nombre_ejecutivo %> <%= executive.apellido_ejecutivo %>"><%= executive.nombre_ejecutivo %> <%= executive.apellido_ejecutivo %></option>
                                                    <% } %>
                                                <% }); %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Ejecutivo de Cobranzas</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="nombre_ejecutivo_cobranzas" required>
                                                <option value="<%= executivesNames[3] %>"><%= executivesNames[3] %></option>
                                                <% executives.forEach((executive) => { %>
                                                    <% if (executive.departamento_cargo_ejecutivo === 'COBRANZAS') { %>
                                                        <option value="<%= executive.nombre_ejecutivo %> <%= executive.apellido_ejecutivo %>"><%= executive.nombre_ejecutivo %> <%= executive.apellido_ejecutivo %></option>
                                                    <% } %>
                                                <% }); %>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row"><label class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input 
                                type="hidden"
                                name="id_poliza"
                                id="id_poliza"
                                value="<%= policy.id_poliza %>"
                                class="form-control"
                            >
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <div class="col-sm-12 col-sm-offset-2">
                            <a href="/sistema/policies" class="btn btn-white btn-sm">Cancelar</a>
                            <button class="btn btn-primary btn-sm" type="submit">Guardar Cambios</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Se incluye el layout del footer -->
<%- include('layouts/footerExtraWizardForm') %>