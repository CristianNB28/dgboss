<script>
var lista = <%- JSON.stringify(data) %>;
var tablaAseguradora = null;
$(document).ready(function(){
    tablaAseguradora = $('#tablaAseguradoras').DataTable({
        pageLength: 25,
        responsive: true,
        dom: '<"html5buttons"B>lTfgitp',
        processing: true,
        serverSide: false,
        columns: [
            {"data": "rif_aseguradora"},
            {"data": "nombre_aseguradora"},
            {"data": "telefono_aseguradora"},
            {"data": "direccion_aseguradora"},
            {
                "data": "",
                "render": (data, type, row) => {
                        return `<form class="form-inline" method="get" action="/sistema/edit-insurer/${row.id_aseguradora}">
                                    <button class="btn btn-warning" type="submit"><i class="fa fa-pencil"></i></button>
                                </form>`;
                }
            },
            {
                "data": "",
                "render": (data, type, row) => {
                        return `<form class="form-inline" method="post" action="/sistema/remove-insurer/${row.id_aseguradora}">
                                    <button class="btn btn-danger" type="submit"><i class="fa fa-ban"></i></button>
                                </form>`;
                }
            }
        ],
        buttons: [
            {extend: 'print',
                customize: function (win){
                    $(win.document.body).addClass('white-bg');
                    $(win.document.body).css('font-size', '10px');

                    $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
            }
            }
        ]
    });
    tablaAseguradora.rows.add(lista);
    tablaAseguradora.draw();
});
</script>


