<!-- Se incluye el layout del header -->
<%- include('layouts/header') %>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Póliza</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/sistema">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Póliza</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Editar Póliza</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">
                <form action="/sistema/update-policy" method="POST">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Póliza</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="numero_poliza"
                                                id="numero_poliza"
                                                value="<%= policy.numero_poliza %>"
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Moneda</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="tipo_moneda">
                                                <option selected value="<%= policy.tipo_moneda %>"><%= policy.tipo_moneda %></option>
                                                    <option value="Bolivar">Bolivar</option>
                                                    <option value="Dólar">Dólar</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Vigencia desde</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="date"
                                                name="fecha_desde"
                                                id="fecha_desde"
                                                value="<%= fechaDesdePoliza %>"
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Prima</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="number"
                                                step="0.01"
                                                name="monto_prima"
                                                id="monto_prima"
                                                value="<%= policy.monto_prima %>"
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Tipo Póliza</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="tipo_poliza"
                                                id="tipo_poliza"
                                                value="<%= policy.tipo_poliza %>"
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Ramo</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="ramo_poliza">
                                                <option selected value="<%= policy.ramo_poliza %>"><%= policy.ramo_poliza %></option>
                                                <option value="Salud">Salud</option>
                                                <option value="Automovil">Automovil</option>
                                                <option value="Patrimonial">Patrimonial</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Tomador</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="nombre_tomador">
                                                <option selected value="<%= policy.nombre_tomador_poliza %>"><%= policy.nombre_tomador_poliza %></option>
                                                <% policies.forEach((policy) => { %>
                                                    <option value="<%= policy.nombre_tomador_poliza %>"><%= policy.nombre_tomador_poliza %></option>
                                                <% }); %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Vigencia hasta</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="date"
                                                name="fecha_hasta"
                                                id="fecha_hasta"
                                                value="<%= fechaHastaPoliza %>"
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Aseguradora</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="nombre_aseguradora">
                                                <option selected value="<%= insurer.nombre_aseguradora %>"><%= insurer.nombre_aseguradora %></option>
                                                <% insurers.forEach((insurer) => { %>
                                                    <option value="<%= insurer.nombre_aseguradora %>"><%= insurer.nombre_aseguradora %></option>
                                                <% }); %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Estatus</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="estatus_poliza">
                                                <option selected value="<%= policy.estatus_poliza %>"><%= policy.estatus_poliza %></option>
                                                    <option value="Vigente">Vigente</option>
                                                    <option value="Anulado">Anulado</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row"><label class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input 
                                type="hidden"
                                name="id_poliza"
                                id="id_poliza"
                                value="<%= policy.id_poliza %>"
                                class="form-control"
                            >
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <div class="col-sm-12 col-sm-offset-2">
                            <a href="/sistema/policies" class="btn btn-white btn-sm">Cancelar</a>
                            <button class="btn btn-primary btn-sm" type="submit">Guardar Cambios</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Se incluye el layout del footer -->
<%- include('layouts/footer') %>