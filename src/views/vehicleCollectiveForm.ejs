<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Colectivo Vehículo</h5>
                </div>
                <div class="ibox-content">
                    <div id="form" class="wizard-big wizard-health">
                        <h1><i class="fa fa-window-maximize"></i> Colectivo</h1>
                        <fieldset>
                            <form action="/sistema/add-vehicle-collective" method="POST">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Póliza</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="numero_colectivo"
                                                        id="numero_colectivo"
                                                        placeholder="Número *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Tomador</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="id_rif_tomador"
                                                        id="id_rif_tomador"
                                                        onkeyup="pasarNombreTomador();"
                                                        placeholder="Cédula/Rif *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Asegurado</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="id_rif_asegurado"
                                                        id="id_rif_asegurado"
                                                        onkeyup="pasarNombreAsegurado();"
                                                        placeholder="Cédula/Rif *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Correo Tomador</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="email"
                                                        name="correo_tomador"
                                                        id="correo_tomador"
                                                        placeholder="Correo *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Correo Asegurado</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="email"
                                                        name="correo_asegurado"
                                                        id="correo_asegurado"
                                                        placeholder="Correo *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Vigencia desde</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="date"
                                                        name="fecha_desde_colectivo"
                                                        id="fecha_desde_colectivo"
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Moneda</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="tipo_moneda_colectivo">
                                                        <option selected value="0">Seleccione *</option>
                                                            <option value="Bolivar">Bolivar</option>
                                                            <option value="Dólar">Dólar</option>
                                                            <option value="Euros">Euros</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Prima Anual</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="number"
                                                        step="0.01"
                                                        name="prima_anual_colectivo"
                                                        id="prima_anual_colectivo"
                                                        placeholder="Prima Anual *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">¿Maternidad?</label>
