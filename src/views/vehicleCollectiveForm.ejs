                                                        <option value="Sí">Sí</option>
                                                        <option value="No">No</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group" id="searchinput" style="display:none">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Cobertura</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="cobertura_colectivo"
                                                        id="cobertura_colectivo"
                                                        placeholder="Cobertura" 
                                                        class="form-control"
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <div class="form-group row">
                                                <label class="col-sm-3 col-form-label">Asegurado/Tomador</label>
                                                <div class="col-sm-9">
                                                    <div><label><input type="checkbox" name="tomador_asegurado_colectivo" id="tomador_asegurado_colectivo" onclick="pasarNombreTomador();"> 
                                                                ¿Asegurado mismo tomador?</label></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Nombre/Razón</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="nombre_tomador_colectivo"
                                                        id="nombre_tomador_colectivo"
                                                        placeholder="Nombre/Razón Social Tomador *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Nombre/Razón</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="nombre_asegurado"
                                                        id="nombre_asegurado"
                                                        placeholder="Nombre/Razón Social Asegurado *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Deducible</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="number"
                                                        step="0.01"
                                                        name="deducible_colectivo"
                                                        id="deducible_colectivo"
                                                        placeholder="Deducible *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Grupo</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="grupo_colectivo"
                                                        id="grupo_colectivo"
                                                        placeholder="Grupo *" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Vigencia hasta</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="date"
                                                        name="fecha_hasta_colectivo"
                                                        id="fecha_hasta_colectivo"
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Aseguradora</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="nombre_aseguradora">
                                                        <option selected value="0">Seleccione *</option>
                                                        <% insurers.forEach((insurer) => { %>
                                                            <option value="<%= insurer.nombre_aseguradora %>"><%= insurer.nombre_aseguradora %></option>
                                                        <% }); %>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Canal</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="tipo_canal_colectivo">
                                                        <option selected value="">Seleccione *</option>
                                                        <option value="Redes Sociales">Redes Sociales</option>
                                                        <option value="Página Web">Página Web</option>
                                                        <option value="Área By Atina">Área By Atina</option>
                                                        <option value="Agente Propio">Agente Propio</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Plazos de Espera</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="plazo_espera_colectivo" id="plazo_espera_colectivo" onchange="showInput2()">
                                                        <option selected value="">Seleccione *</option>
                                                        <option value="Sí">Sí</option>
                                                        <option value="No">No</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group" id="searchinput2" style="display:none">
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Detalle Cliente</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="detalle_cliente_colectivo"
                                                        id="detalle_cliente_colectivo"
                                                        placeholder="Detalle desde cuando es cliente" 
                                                        class="form-control"
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-12 col-sm-offset-2">
                                        <div class="card-body d-flex">
                                            <button class="btn btn-primary btn-sm btn-circle ml-auto" type="submit"><i class="fa fa-check"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </fieldset>
                        <h1><i class="fa fa-automobile"></i> Vehículo</h1>
                        <fieldset>
                            <form action="/sistema/add-transportation" method="POST" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <div class="form-group row"><label class="col-sm-2 col-form-label">Tipo de Movimiento</label>
                                                <div class="col-sm-10">
                                                    <select class="form-control" name="tipo_movimiento_vehiculo">
