<!-- Se incluye el layout del header -->
<%- include('layouts/header') %>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Datos</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/sistema">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Datos</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Agregar Ejecutivo</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">
                <form method="POST" action="/sistema/add-executive">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Cédula/Rif</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="id_rif_ejecutivo"
                                                id="id_rif_ejecutivo"
                                                placeholder="Cédula/Rif *" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Nombre</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="nombre_ejecutivo"
                                                id="nombre_ejecutivo" 
                                                placeholder="Nombre de Ejecutivo *" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Apellido</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="apellido_ejecutivo"
                                                id="apellido_ejecutivo" 
                                                placeholder="Apellido de Ejecutivo *" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    </br>                                    
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Celular</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="tel"
                                                name="celular_ejecutivo"
                                                id="celular_ejecutivo" 
                                                placeholder="Celular de Ejecutivo *" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Correo</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="email"
                                                name="correo_ejecutivo"
                                                id="correo_ejecutivo" 
                                                placeholder="Correo de Ejecutivo *" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Dirección</label>
                                        <div class="col-sm-10">
                                            <textarea 
                                                name="direccion_ejecutivo"
                                                id="direccion_ejecutivo" 
                                                placeholder="Dirección de Ejecutivo *" 
                                                class="form-control"
                                                required
                                            ></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a href="/sistema" class="btn btn-white btn-sm">Cancelar</a>
                            <button class="btn btn-primary btn-sm" type="submit">Guardar Cambios</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Se incluye el layout del footer -->
<%- include('layouts/footer') %>