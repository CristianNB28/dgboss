<!-- Se incluye el layout del header -->
<%- include('layouts/header') %>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Datos</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/sistema">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Datos</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Agregar Ejecutivos</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">
                <form method="POST" action="/sistema/add-executive">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Cédula</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="cedula_ejecutivo"
                                                id="cedula_ejecutivo"
                                                placeholder="Cédula *" 
                                                class="form-control cedula"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Nombre</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="nombre_ejecutivo"
                                                id="nombre_ejecutivo" 
                                                placeholder="Nombre de Ejecutivo *" 
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Apellido</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="apellido_ejecutivo"
                                                id="apellido_ejecutivo" 
                                                placeholder="Apellido de Ejecutivo *" 
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">
                                        <div class="form-group row"><label class="col-sm-2 col-form-label">Cargo</label>
                                            <div class="col-sm-10">
                                                <select class="form-control" name="cargo_ejecutivo" id="cargo_ejecutivo" required>
                                                    <option value="">Seleccione *</option>
                                                    <option value="GERENTE">GERENTE</option>
                                                    <option value="COORDINADOR">COORDINADOR</option>
                                                    <option value="EJECUTIVO">EJECUTIVO</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">
                                        <div class="form-group row"><label class="col-sm-2 col-form-label">Departamento</label>
                                            <div class="col-sm-10">
                                                <select class="form-control" name="departamento_cargo_ejecutivo" id="departamento_cargo_ejecutivo" required>
                                                    <option value="">Seleccione *</option>
                                                    <optgroup label="GERENTE" id="GERENTE">
                                                        <option value="TÉCNICO">TÉCNICO</option>
                                                    </optgroup>
                                                    <optgroup label="COORDINADOR" id="COORDINADOR"> 
                                                        <option value="SUSCRIPCIÓN INDIVIDUAL">SUSCRIPCIÓN INDIVIDUAL</option> 
                                                        <option value="SUSCRIPCIÓN COLECTIVO">SUSCRIPCIÓN COLECTIVO</option> 
                                                        <option value="SINIESTRO">SINIESTRO</option>
                                                        <option value="ADMINISTRACIÓN">ADMINISTRACIÓN</option> 
                                                    </optgroup> 
                                                    <optgroup label="EJECUTIVO" id="EJECUTIVO"> 
                                                        <option value="SUSCRIPCIÓN">SUSCRIPCIÓN</option>
                                                        <option value="SINIESTROS">SINIESTROS</option>
                                                        <option value="COBRANZAS">COBRANZAS</option> 
                                                    </optgroup>
                                                </select>
                                            </div>
                                        </div>
                                    </div>                                    
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Celular</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="tel"
                                                name="celular_ejecutivo"
                                                id="celular_ejecutivo" 
                                                placeholder="Celular de Ejecutivo *" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Correo</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="email"
                                                name="correo_ejecutivo"
                                                id="correo_ejecutivo"
                                                pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" 
                                                placeholder="Correo de Ejecutivo *" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Dirección</label>
                                        <div class="col-sm-10">
                                            <textarea 
                                                name="direccion_ejecutivo"
                                                id="direccion_ejecutivo" 
                                                placeholder="Dirección de Ejecutivo *" 
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                required
                                            ></textarea>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Comisión</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="porcentaje_ejecutivo"
                                                id="porcentaje_ejecutivo" 
                                                placeholder="Comisión de Ejecutivo *" 
                                                class="form-control porcentaje_comision"
                                            >
                                        </div>
                                    </div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label"></label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="hidden"
                                                name=""
                                                id=""
                                                class="form-control"
                                            >
                                        </div>
                                    </div>
                                    </br>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a href="/sistema" class="btn btn-white btn-sm">Cancelar</a>
                            <button class="btn btn-primary btn-sm" type="submit">Guardar Cambios</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Se incluye el layout del footer -->
<%- include('layouts/footer') %>