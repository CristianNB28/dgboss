<!-- Se incluye el layout del header -->
<%- include('layouts/header') %>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Reclamos</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/sistema">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Reclamos</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Editar Emergencia</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">
                <form method="POST" action="/sistema/update-emergency">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Patología</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="patologia_emergencia"
                                                id="patologia_emergencia"
                                                value="<%= emergency.patologia_emergencia %>" 
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Fecha Ocurrencia</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="date"
                                                name="fecha_ocurrencia_emergencia"
                                                id="fecha_ocurrencia_emergencia"
                                                value="<%= fechaOcurrenciaEmergencia %>" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <% if (naturalInsured === undefined) { %>
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Cédula/Rif</label>
                                            <div class="col-sm-9 field">
                                                <div class="numeral-selector selector">
                                                    <div class="select-box-wrapper">
                                                        <select name="tipo_id_rif_asegurado" id="select_box">
                                                            <option value="<%= legalInsured.tipo_rif_asegurado_per_jur %>"><%= legalInsured.tipo_rif_asegurado_per_jur %></option>
                                                            <option value="V">V</option>
                                                            <option value="E">E</option>
                                                            <option value="J">J</option>
                                                            <option value="G">G</option>
                                                            <option value="I">I</option>
                                                            <option value="F">F</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <input
                                                    type="text"
                                                    name="id_rif_asegurado"
                                                    id="id_rif_asegurado"
                                                    onkeyup="pasarNombreAsegurado();"
                                                    value="<%= legalInsured.rif_asegurado_per_jur %>" 
                                                    class="form-control input-numeral"
                                                    required
                                                >
                                            </div>
                                        </div>
                                    <% } else if (legalInsured === undefined) { %>
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Cédula/Rif</label>
                                            <div class="col-sm-9 field">
                                                <div class="numeral-selector selector">
                                                    <div class="select-box-wrapper">
                                                        <select name="tipo_id_rif_asegurado" id="select_box">
                                                            <option value="<%= naturalInsured.tipo_cedula_asegurado_per_nat %>"><%= naturalInsured.tipo_cedula_asegurado_per_nat %></option>
                                                            <option value="V">V</option>
                                                            <option value="E">E</option>
                                                            <option value="J">J</option>
                                                            <option value="G">G</option>
                                                            <option value="I">I</option>
                                                            <option value="F">F</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <input 
                                                    type="text"
                                                    name="id_rif_asegurado"
                                                    id="id_rif_asegurado"
                                                    onkeyup="pasarNombreAsegurado();"
                                                    value="<%= naturalInsured.cedula_asegurado_per_nat %>" 
                                                    class="form-control input-numeral"
                                                    required
                                                >
                                            </div>
                                        </div>
                                    <% } %>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Cédula</label>
                                        <div class="col-sm-9 field">
                                            <div class="numeral-selector selector">
                                                <div class="select-box-wrapper">
                                                    <select name="tipo_cedula_beneficiario" id="select_box2">
                                                        <option value="<%= beneficiary.tipo_cedula_beneficiario %>"><%= beneficiary.tipo_cedula_beneficiario %></option>
                                                        <option value="V">V</option>
                                                        <option value="E">E</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <input 
                                                type="text"
                                                name="cedula_beneficiario"
                                                id="cedula_beneficiario"
                                                onkeyup="pasarNombreAsegurado();"
                                                value="<%= beneficiary.cedula_beneficiario %>"
                                                class="form-control input-numeral-cedula"
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Moneda</label>
                                            <div class="col-sm-9">
                                                <select class="form-control" name="tipo_moneda_reclamo" id="tipo_moneda_reclamo" onchange="currencySignChange()" required>
                                                    <option value="<%= emergency.tipo_moneda_emergencia %>"><%= emergency.tipo_moneda_emergencia %></option>
                                                    <option value="BOLÍVAR">BOLÍVAR</option>
                                                    <option value="DÓLAR">DÓLAR</option>
                                                    <option value="EUROS">EUROS</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Número Siniestro</label>
                                            <div class="col-sm-9">
                                                <input 
                                                    type="text"
                                                    name="numero_siniestro_emergencia"
                                                    id="numero_siniestro_emergencia" 
                                                    value="<%= emergency.numero_siniestro_emergencia %>"
                                                    class="form-control"
                                                    required
                                                >
                                            </div>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Observaciones</label>
                                        <div class="col-sm-9">
                                            <textarea 
                                                name="observacion_emergencia"
                                                id="observacion_emergencia" 
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                required
                                            ><%= emergency.observacion_emergencia %></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Monto Reclamado</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="monto_reclamado_emergencia"
                                                id="monto_reclamado_emergencia" 
                                                value="<%= montoReclamoEmergencia %>"
                                                class="form-control currency_format"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Fecha Notificación</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="date"
                                                name="fecha_notificacion_emergencia"
                                                id="fecha_notificacion_emergencia"
                                                value="<%= fechaNotificacionEmergencia %>" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <% if (naturalInsured === undefined) { %>
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Titular</label>
                                            <div class="col-sm-9">
                                                <input 
                                                    type="text"
                                                    name="nombre_razon_asegurado"
                                                    id="nombre_razon_asegurado"
                                                    value="<%= legalInsured.razon_social_per_jur %>"
                                                    class="form-control"
                                                    required
                                                >
                                            </div>
                                        </div>
                                    <% } else if (legalInsured === undefined) { %>
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Titular</label>
                                            <div class="col-sm-9">
                                                <input 
                                                    type="text"
                                                    name="nombre_razon_asegurado"
                                                    id="nombre_razon_asegurado"
                                                    value="<%= naturalInsured.nombre_asegurado_per_nat %> <%= naturalInsured.apellido_asegurado_per_nat %>"
                                                    class="form-control"
                                                    oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                    required
                                                >
                                            </div>
                                        </div>
                                    <% } %>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Beneficiario</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="nombre_beneficiario"
                                                id="nombre_beneficiario"
                                                value="<%= beneficiary.nombre_beneficiario %> <%= beneficiary.apellido_beneficiario %>"
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Clínica</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="clinica_emergencia"
                                                id="clinica_emergencia"
                                                value="<%= emergency.clinica_emergencia %>"
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <% if (numeroPoliza !== '') { %>
                                        <div class="hr-line-dashed"></div>
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Número Póliza</label>
                                            <div class="col-sm-9">
                                                <select class="form-control" name="numero_poliza" onmousedown="if(this.options.length>2)this.size=2" onchange="this.size=0" onblur="this.size=0">
                                                    <option value="<%= numeroPoliza %>"><%= numeroPoliza %></option>
                                                    <% policies.forEach((policy) => { %>
                                                        <option value="<%= policy.numero_poliza %>"><%= policy.numero_poliza %></option>
                                                    <% }); %>
                                                    <% collectives.forEach((collective) => { %>
                                                        <option value="<%= collective.numero_colectivo %>"><%= collective.numero_colectivo %></option>
                                                    <% }); %>
                                                </select>
                                            </div>
                                        </div>
                                    <% } else if (numeroColectivo !== '') { %>
                                        <div class="hr-line-dashed"></div>
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Número Póliza</label>
                                            <div class="col-sm-9">
                                                <select class="form-control" name="numero_poliza" onmousedown="if(this.options.length>2)this.size=2" onchange="this.size=0" onblur="this.size=0">
                                                    <option value="<%= numeroColectivo %>"><%= numeroColectivo %></option>
                                                    <% policies.forEach((policy) => { %>
                                                        <option value="<%= policy.numero_poliza %>"><%= policy.numero_poliza %></option>
                                                    <% }); %>
                                                    <% collectives.forEach((collective) => { %>
                                                        <option value="<%= collective.numero_colectivo %>"><%= collective.numero_colectivo %></option>
                                                    <% }); %>
                                                </select>
                                            </div>
                                        </div>
                                    <% } else { %>
                                        <div class="hr-line-dashed"></div>
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Número Póliza</label>
                                            <div class="col-sm-9">
                                                <select class="form-control" name="numero_poliza" onmousedown="if(this.options.length>2)this.size=2" onchange="this.size=0" onblur="this.size=0">
                                                    <option value="">Seleccione</option>
                                                    <% policies.forEach((policy) => { %>
                                                        <option value="<%= policy.numero_poliza %>"><%= policy.numero_poliza %></option>
                                                    <% }); %>
                                                    <% collectives.forEach((collective) => { %>
                                                        <option value="<%= collective.numero_colectivo %>"><%= collective.numero_colectivo %></option>
                                                    <% }); %>
                                                </select>
                                            </div>
                                        </div>
                                    <% } %>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Estatus</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="estatus" id="estatus" required>
                                                <option value="<%= emergency.estatus_emergencia %>"><%= emergency.estatus_emergencia %></option>
                                                <option value="PENDIENTE">PENDIENTE</option>
                                                <option value="RECHAZADO">RECHAZADO</option>
                                                <option value="LIQUIDADO">LIQUIDADO</option>
                                                <option value="PAGADO">PAGADO</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Monto Pagado</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="monto_pagado_emergencia"
                                                id="monto_pagado_emergencia" 
                                                value="<%= montoPagadoEmergencia %>"
                                                class="form-control currency_format"
                                            >
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row"><label class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input 
                                type="hidden"
                                name="id_emergencia"
                                id="id_emergencia"
                                value="<%= emergency.id_emergencia %>"
                                class="form-control"
                            >
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a href="/sistema/emergencies" class="btn btn-white btn-sm">Cancelar</a>
                            <button class="btn btn-primary btn-sm" type="submit">Guardar Cambios</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Se incluye el layout del footer -->
<%- include('layouts/footerClaim') %>