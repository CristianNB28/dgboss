<!-- Se incluye el layout del header -->
<%- include('layouts/header') %>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Reclamos</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/sistema">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Reclamos</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Editar Emergencia</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">
                <form method="POST" action="/sistema/update-emergency">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Patología</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="patologia_emergencia"
                                                id="patologia_emergencia"
                                                value="<%= emergency.patologia_emergencia %>" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Fecha Ocurrencia</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="date"
                                                name="fecha_ocurrencia_emergencia"
                                                id="fecha_ocurrencia_emergencia"
                                                value="<%= fechaOcurrenciaEmergencia %>" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <% if (naturalInsured === undefined) { %>
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Cédula/Rif</label>
                                            <div class="col-sm-9">
                                                <input 
                                                    type="text"
                                                    name="id_rif_asegurado"
                                                    id="id_rif_asegurado"
                                                    onkeyup="pasarNombreAsegurado();"
                                                    value="<%= legalInsured.rif_asegurado_per_jur %>" 
                                                    class="form-control"
                                                    required
                                                >
                                            </div>
                                        </div>
                                    <% } else if (legalInsured === undefined) { %>
                                        <% if (naturalInsured.rif_asegurado_per_nat === '') { %>
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Cédula/Rif</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="id_rif_asegurado"
                                                        id="id_rif_asegurado"
                                                        onkeyup="pasarNombreAsegurado();"
                                                        value="<%= naturalInsured.cedula_asegurado_per_nat %>" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        <% } else { %>
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Cédula/Rif</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="id_rif_asegurado"
                                                        id="id_rif_asegurado"
                                                        onkeyup="pasarNombreAsegurado();"
                                                        value="<%= naturalInsured.rif_asegurado_per_nat %>" 
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        <% } %>
                                    <% } %>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Cédula</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="cedula_beneficiario"
                                                id="cedula_beneficiario"
                                                value="<%= arrayBeneficiaryId %>"
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Moneda</label>
                                            <div class="col-sm-9">
                                                <select class="form-control" name="tipo_moneda_emergencia">
                                                    <option selected value="<%= emergency.tipo_moneda_emergencia %>"><%= emergency.tipo_moneda_emergencia %></option>
                                                        <option value="Bolivar">Bolivar</option>
                                                        <option value="Dólar">Dólar</option>
                                                        <option value="Euros">Euros</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">
                                        <% if (naturalInsured === undefined) { %>
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Siniestro</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="siniestro_nombre" id="siniestro_nombre">
                                                        <option selected value="<%= emergency.siniestro_nombre_emergencia %>"><%= emergency.siniestro_nombre_emergencia %></option>
                                                        <option value="<%= legalInsured.razon_social_per_jur %>"><%= legalInsured.razon_social_per_jur %></option>
                                                        <% arrayBeneficiaryName.forEach((BeneficiaryName) => { %>
                                                            <option value="<%= BeneficiaryName %>"><%= BeneficiaryName %></option>
                                                        <% }); %>
                                                    </select>
                                                </div>
                                            </div>
                                        <% } else if (legalInsured === undefined) { %>
                                            <% if (naturalInsured.rif_asegurado_per_nat === '') { %>
                                                <div class="form-group row"><label class="col-sm-3 col-form-label">Siniestro</label>
                                                    <div class="col-sm-9">
                                                        <select class="form-control" name="siniestro_nombre" id="siniestro_nombre">
                                                            <option selected value="<%= emergency.siniestro_nombre_emergencia %>"><%= emergency.siniestro_nombre_emergencia %></option>
                                                            <option value="<%= naturalInsured.nombre_asegurado_per_nat %> <%= naturalInsured.apellido_asegurado_per_nat %>"><%= naturalInsured.nombre_asegurado_per_nat %> <%= naturalInsured.apellido_asegurado_per_nat %></option>
                                                            <% arrayBeneficiaryName.forEach((BeneficiaryName) => { %>
                                                                <option value="<%= BeneficiaryName %>"><%= BeneficiaryName %></option>
                                                            <% }); %>
                                                        </select>
                                                    </div>
                                                </div>
                                            <% } else { %>
                                                <div class="form-group row"><label class="col-sm-3 col-form-label">Siniestro</label>
                                                    <div class="col-sm-9">
                                                        <select class="form-control" name="siniestro_nombre" id="siniestro_nombre">
                                                            <option selected value="<%= emergency.siniestro_nombre_emergencia %>"><%= emergency.siniestro_nombre_emergencia %></option>
                                                            <option value="<%= naturalInsured.nombre_asegurado_per_nat %> <%= naturalInsured.apellido_asegurado_per_nat %>"><%= naturalInsured.nombre_asegurado_per_nat %> <%= naturalInsured.apellido_asegurado_per_nat %></option>
                                                            <% arrayBeneficiaryName.forEach((BeneficiaryName) => { %>
                                                                <option value="<%= BeneficiaryName %>"><%= BeneficiaryName %></option>
                                                            <% }); %>
                                                        </select>
                                                    </div>
                                                </div>
                                            <% } %>
                                        <% } %>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Observaciones</label>
                                        <div class="col-sm-9">
                                            <textarea 
                                                name="observacion_emergencia"
                                                id="observacion_emergencia" 
                                                class="form-control"
                                                required
                                            ><%= emergency.observacion_emergencia %></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Monto Reclamado</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="number"
                                                step="0.01"
                                                name="monto_reclamado_emergencia"
                                                id="monto_reclamado_emergencia" 
                                                value="<%= emergency.monto_reclamado_emergencia %>"
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Fecha Notificación</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="date"
                                                name="fecha_notificacion_emergencia"
                                                id="fecha_notificacion_emergencia"
                                                value="<%= fechaNotificacionEmergencia %>" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <% if (naturalInsured === undefined) { %>
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Asegurado</label>
                                            <div class="col-sm-9">
                                                <input 
                                                    type="text"
                                                    name="nombre_razon_asegurado"
                                                    id="nombre_razon_asegurado"
                                                    value="<%= legalInsured.razon_social_per_jur %>"
                                                    class="form-control"
                                                    required
                                                >
                                            </div>
                                        </div>
                                    <% } else if (legalInsured === undefined) { %>
                                        <% if (naturalInsured.rif_asegurado_per_nat === '') { %>
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Asegurado</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="nombre_razon_asegurado"
                                                        id="nombre_razon_asegurado"
                                                        value="<%= naturalInsured.nombre_asegurado_per_nat %> <%= naturalInsured.apellido_asegurado_per_nat %>"
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        <% } else { %>
                                            <div class="form-group row"><label class="col-sm-3 col-form-label">Asegurado</label>
                                                <div class="col-sm-9">
                                                    <input 
                                                        type="text"
                                                        name="nombre_razon_asegurado"
                                                        id="nombre_razon_asegurado"
                                                        value="<%= naturalInsured.nombre_asegurado_per_nat %> <%= naturalInsured.apellido_asegurado_per_nat %>"
                                                        class="form-control"
                                                        required
                                                    >
                                                </div>
                                            </div>
                                        <% } %>
                                    <% } %>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Beneficiario</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="nombre_beneficiario"
                                                id="nombre_beneficiario"
                                                value="<%= arrayBeneficiaryName %>"
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Clínica</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="clinica_emergencia"
                                                id="clinica_emergencia"
                                                value="<%= emergency.clinica_emergencia %>"
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Estatus</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="estatus" id="estatus">
                                                <option selected value="<%= emergency.estatus_emergencia %>"><%= emergency.estatus_emergencia %></option>
                                                    <option value="Pendiente">Pendiente</option>
                                                    <option value="Rechazado">Rechazado</option>
                                                    <option value="Liquidado">Liquidado</option>
                                                    <option value="Pagado">Pagado</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Monto Pagado</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="number"
                                                step="0.01"
                                                name="monto_pagado"
                                                id="monto_pagado" 
                                                value="<%= emergency.monto_pagado_emergencia %>"
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="hidden"
                                                name="id_emergencia"
                                                id="id_emergencia"
                                                value="<%= emergency.id_emergencia %>"
                                                class="form-control"
                                            >
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a href="/sistema/emergencies" class="btn btn-white btn-sm">Cancelar</a>
                            <button class="btn btn-primary btn-sm" type="submit">Guardar Cambios</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Se incluye el layout del footer -->
<%- include('layouts/footerClaim') %>