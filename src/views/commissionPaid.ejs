                                <th>N° Póliza</th>
                                <th>Aseguradora</th>
                                <th>Ramo</th>
                                <th>Tomador</th>
                                <th>Asegurado</th>
                                <th>Prima Neta</th>
                                <th>Comisión</th>
                            </tr>
                            </tfoot>
                            </table>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
