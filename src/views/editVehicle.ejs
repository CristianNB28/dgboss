<!-- Se incluye el layout del header -->
<%- include('layouts/header') %>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Colectivo</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/sistema">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Colectivo</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Editar Colectivos Vehículo</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">
                <form action="/sistema/update-vehicle" method="POST">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Placa</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="numero_placa"
                                                id="numero_placa"
                                                value="<%= vehicle.numero_placa %>" 
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Marca</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="marca_vehiculo"
                                                id="marca_vehiculo"
                                                value="<%= vehicle.marca_vehiculo %>" 
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Versión</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="version_vehiculo"
                                                id="version_vehiculo"
                                                value="<%= vehicle.version_vehiculo %>" 
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Serial Carrocería</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="serial_carroceria"
                                                id="serial_carroceria"
                                                value="<%= vehicle.serial_carroceria %>" 
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Color</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="color_vehiculo"
                                                id="color_vehiculo"
                                                value="<%= vehicle.color_vehiculo %>" 
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Carga</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="capacidad_carga"
                                                id="capacidad_carga"
                                                value="<%= capacidadCarga %>" 
                                                class="form-control number_format"
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Transmisión</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="tipo_transmision_vehiculo" required>
                                                <option value="<%= vehicle.tipo_transmision_vehiculo %>"><%= vehicle.tipo_transmision_vehiculo %></option>
                                                <option value="AUTOMÁTICO">AUTOMÁTICO</option>
                                                <option value="SINCRÓNICO">SINCRÓNICO</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Blindaje</label>
                                            <div class="col-sm-9">
                                                <div><label><input 
                                                                type="checkbox" 
                                                                name="blindaje_boolean_vehiculo" 
                                                                id="blindaje_boolean_vehiculo"
                                                                <%= vehicle.blindaje_boolean_vehiculo === 1 ? 'checked': '' %>
                                                            > 
                                                            ¿Tiene Blindaje?</label></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Año</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="number" 
                                                min="1900" 
                                                max="2099" 
                                                step="1" 
                                                value="<%= vehicle.year_vehiculo %>"
                                                name="year_vehiculo"
                                                id="year_vehiculo" 
                                                class="form-control"
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Modelo</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="modelo_vehiculo"
                                                id="modelo_vehiculo"
                                                value="<%= vehicle.modelo_vehiculo %>" 
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Tipo Vehículo</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="tipo_vehiculo" required>
                                                <option value="<%= vehicle.tipo_vehiculo %>"><%= vehicle.tipo_vehiculo %></option>
                                                <option value="MOTOCICLETA">MOTOCICLETA</option>
                                                <option value="AUTOMÓVIL">AUTOMÓVIL</option>
                                                <option value="CAMIÓN">CAMIÓN</option>
                                                <option value="AUTOBÚS">AUTOBÚS</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Serial Motor</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="serial_motor"
                                                id="serial_motor"
                                                value="<%= vehicle.serial_motor %>" 
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Nombre</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="nombre_conductor_vehiculo"
                                                id="nombre_conductor_vehiculo"
                                                value="<%= vehicle.nombre_conductor_vehiculo %>"  
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Suma Asegurada</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="suma_asegurada_vehiculo"
                                                id="suma_asegurada_vehiculo"
                                                value="<%= sumaAsegurada %>" 
                                                class="form-control number_format"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Tipo Movimiento</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="tipo_movimiento_beneficiario" id="tipo_movimiento_beneficiario" required>
                                                <option value="<%= vehicle.tipo_movimiento_vehiculo %>"><%= vehicle.tipo_movimiento_vehiculo %></option>
                                                <option value="EMISIÓN">EMISIÓN</option>
                                                <option value="RENOVACIÓN">RENOVACIÓN</option>
                                                <option value="INCLUSIÓN">INCLUSIÓN</option>
                                                <option value="EXCLUSIÓN">EXCLUSIÓN</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="hidden"
                                                name="id_vehiculo"
                                                id="id_vehiculo"  
                                                value="<%= vehicle.id_vehiculo %>" 
                                                class="form-control"
                                            >
                                        </div>
                                    </div>
                                    </br>
                                    </br>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <div class="col-sm-12 col-sm-offset-2">
                            <a href="/sistema/collectives-detail/<%= idCollective.colectivo_id %>" class="btn btn-white btn-sm">Cancelar</a>
                            <button class="btn btn-primary btn-sm" type="submit">Guardar Cambios</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Se incluye el layout del footer -->
<%- include('layouts/footer') %>