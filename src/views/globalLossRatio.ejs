<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Page-Level Scripts -->
<script>
    var premium = <%- JSON.stringify(totalPremium) %>;
    function pasarGastos() {
        var incurredClaimAmount = document.getElementById("gasto_siniestro_incurrido").value
        var lossRatio = premium / incurredClaimAmount;
        if (incurredClaimAmount === '') {
            document.getElementById("porcentaje_siniestralidad").value = '';
        } else {
            document.getElementById("porcentaje_siniestralidad").value = lossRatio.toFixed(2);
        }
    }
</script>

