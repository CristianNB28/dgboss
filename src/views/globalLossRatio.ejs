<!-- Se incluye el layout del header -->
<%- include('layouts/header') %>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Reportes</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/sistema">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Reportes</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Siniestralidad Global</strong>
            </li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">
                <div class="col-lg-12">
                    <div class="form-group row"><label class="col-sm-2 col-form-label">Siniestro</label>
                        <div class="col-sm-10">
                            <input 
                                type="number"
                                step="0.01"
                                name="gasto_siniestro_incurrido"
                                id="gasto_siniestro_incurrido" 
                                placeholder="Gastos de siniestros incurridos *"
                                onkeyup="pasarGastos();"
                                class="form-control"
                                required
                            >
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group row"><label class="col-sm-2 col-form-label">Porcentaje de Siniestralidad</label>
                        <div class="col-sm-10">
                            <input 
                                type="number"
                                step="0.01"
                                name="porcentaje_siniestralidad"
                                id="porcentaje_siniestralidad" 
                                class="form-control"
                                required
                            >
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</br>
</br>
</br>
<div class="footer">
    
</div>
</div>
</div>

