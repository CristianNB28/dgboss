<!-- Se incluye el layout del header -->
<%- include('layouts/header') %>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Datos</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/sistema">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Datos</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Agregar Empresa</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">
                <form method="POST" action="/sistema/add-company">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Cédula/Rif</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="id_rif"
                                                id="id_rif"
                                                placeholder="Cédula/Rif *" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Nombre</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="nombre_empresa"
                                                id="nombre_empresa" 
                                                placeholder="Nombre de Empresa *" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Dominio</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="dominio_empresa"
                                                id="dominio_empresa"
                                                placeholder="Dominio de Empresa *"
                                                class="form-control" 
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Email</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="email"
                                                name="email_empresa"
                                                id="email_empresa" 
                                                placeholder="Email *" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>                                    
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">País</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="pais_empresa"
                                                id="pais_empresa"
                                                placeholder="País de Empresa *"
                                                class="form-control"
                                                required 
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Dirección</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="direccion_empresa"
                                                id="direccion_empresa"
                                                placeholder="Dirección Fiscal *" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Comisión</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="number"
                                                step="0.01"
                                                name="comision_empresa"
                                                id="comision_empresa"
                                                placeholder="% Comisión *" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Días</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="date"
                                                name="dias_renovacion_empresa"
                                                id="dias_renovacion_empresa" 
                                                placeholder="Días de Renovación *" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Teléfono</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="telefono_empresa"
                                                id="telefono_empresa" 
                                                placeholder="Teléfono *" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Teléfono</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="telefono_opcional"
                                                id="telefono_opcional" 
                                                placeholder="Teléfono Opcional" 
                                                class="form-control"
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Factor Retención</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="number"
                                                step="0.0001"
                                                name="factor_empresa"
                                                id="factor_empresa" 
                                                placeholder="Factor Retención *"  
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    </br>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label"></label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="hidden" 
                                                placeholder="" 
                                                class="form-control"
                                                disabled
                                            >
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-white btn-sm" type="submit">Cancelar</button>
                            <button class="btn btn-primary btn-sm" type="submit">Guardar Cambios</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Se incluye el layout del footer -->
<%- include('layouts/footer') %>