<!-- Se incluye el layout del header -->
<%- include('layouts/header') %>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Reclamos</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/sistema">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Reclamos</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Editar Reembolso</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">
                <form method="POST" action="/sistema/update-refund">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Patología</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="patologia_reembolso"
                                                id="patologia_reembolso"
                                                value="<%= refund.patologia_reembolso %>" 
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Fecha Ocurrencia</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="date"
                                                name="fecha_ocurrencia_reembolso"
                                                id="fecha_ocurrencia_reembolso"
                                                value="<%= fechaOcurrenciaReembolso %>" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <% if (naturalInsured === undefined) { %>
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Cédula/Rif</label>
                                            <div class="col-sm-9">
                                                <input 
                                                    type="text"
                                                    name="id_rif_asegurado"
                                                    id="id_rif_asegurado"
                                                    onkeyup="pasarNombreAsegurado();"
                                                    value="<%= legalInsured.rif_asegurado_per_jur %>" 
                                                    class="form-control cedula_rif"
                                                    oninput="let p=this.selectionStart;this.value=this.value.toUpperCase().replace(/\s+/g, '');this.setSelectionRange(p, p);"
                                                    required
                                                >
                                            </div>
                                        </div>
                                    <% } else if (legalInsured === undefined) { %>
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Cédula/Rif</label>
                                            <div class="col-sm-9">
                                                <input 
                                                    type="text"
                                                    name="id_rif_asegurado"
                                                    id="id_rif_asegurado"
                                                    onkeyup="pasarNombreAsegurado();"
                                                    value="<%= naturalInsured.cedula_asegurado_per_nat %>" 
                                                    class="form-control cedula_rif"
                                                    oninput="let p=this.selectionStart;this.value=this.value.toUpperCase().replace(/\s+/g, '');this.setSelectionRange(p, p);"
                                                    required
                                                >
                                            </div>
                                        </div>
                                    <% } %>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Cédula</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="cedula_beneficiario"
                                                id="cedula_beneficiario"
                                                onkeyup="pasarNombreAsegurado();"
                                                value="<%= beneficiary.cedula_beneficiario %>"
                                                class="form-control cedula"
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Moneda</label>
                                            <div class="col-sm-9">
                                                <select class="form-control" name="tipo_moneda_reclamo" id="tipo_moneda_reclamo" onchange="currencySignChange()" required>
                                                    <option value="<%= refund.tipo_moneda_reembolso %>"><%= refund.tipo_moneda_reembolso %></option>
                                                    <option value="BOLÍVAR">BOLÍVAR</option>
                                                    <option value="DÓLAR">DÓLAR</option>
                                                    <option value="EUROS">EUROS</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Número Siniestro</label>
                                            <div class="col-sm-9">
                                                <input 
                                                    type="text"
                                                    name="numero_siniestro_reembolso"
                                                    id="numero_siniestro_reembolso" 
                                                    value="<%= refund.numero_siniestro_reembolso %>"
                                                    class="form-control"
                                                    required
                                                >
                                            </div>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Observaciones</label>
                                        <div class="col-sm-9">
                                            <textarea 
                                                name="observacion_reembolso"
                                                id="observacion_reembolso" 
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                required
                                            ><%= refund.observacion_reembolso %></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Monto Reclamado</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="monto_reclamo_reembolso"
                                                id="monto_reclamo_reembolso" 
                                                value="<%= montoReclamoReembolso %>"
                                                class="form-control currency_format"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Fecha Notificación</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="date"
                                                name="fecha_notificacion_reembolso"
                                                id="fecha_notificacion_reembolso"
                                                value="<%= fechaNotificacionReembolso %>"
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <% if (naturalInsured === undefined) { %>
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Titular</label>
                                            <div class="col-sm-9">
                                                <input 
                                                    type="text"
                                                    name="nombre_razon_asegurado"
                                                    id="nombre_razon_asegurado"
                                                    value="<%= legalInsured.razon_social_per_jur %>"
                                                    class="form-control"
                                                    oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                    required
                                                >
                                            </div>
                                        </div>
                                    <% } else if (legalInsured === undefined) { %>
                                        <div class="form-group row"><label class="col-sm-3 col-form-label">Titular</label>
                                            <div class="col-sm-9">
                                                <input 
                                                    type="text"
                                                    name="nombre_razon_asegurado"
                                                    id="nombre_razon_asegurado"
                                                    value="<%= naturalInsured.nombre_asegurado_per_nat %> <%= naturalInsured.apellido_asegurado_per_nat %>"
                                                    class="form-control"
                                                    oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                                    required
                                                >
                                            </div>
                                        </div>
                                    <% } %>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Beneficiario</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="nombre_beneficiario"
                                                id="nombre_beneficiario"
                                                value="<%= beneficiary.nombre_beneficiario %> <%= beneficiary.apellido_beneficiario %>"
                                                class="form-control"
                                                oninput="let p=this.selectionStart;this.value=this.value.toUpperCase();this.setSelectionRange(p, p);"
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Estatus</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="estatus" id="estatus" required>
                                                <option value="<%= refund.estatus_reembolso %>"><%= refund.estatus_reembolso %></option>
                                                <option value="PENDIENTE">PENDIENTE</option>
                                                <option value="RECHAZADO">RECHAZADO</option>
                                                <option value="LIQUIDADO">LIQUIDADO</option>
                                                <option value="PAGADO">PAGADO</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label">Monto Pagado</label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="text"
                                                name="monto_pagado_reembolso"
                                                id="monto_pagado_reembolso" 
                                                value="<%= montoPagadoReembolso %>"
                                                class="form-control currency_format"
                                            >
                                        </div>
                                    </div>
                                    <div class="form-group row"><label class="col-sm-3 col-form-label"></label>
                                        <div class="col-sm-9">
                                            <input 
                                                type="hidden"
                                                name="id_reembolso"
                                                id="id_reembolso"
                                                value="<%= refund.id_reembolso %>"
                                                class="form-control"
                                            >
                                        </div>
                                    </div>
                                    </br>
                                    </br>
                                    </br>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a href="/sistema/refunds" class="btn btn-white btn-sm">Cancelar</a>
                            <button class="btn btn-primary btn-sm" type="submit">Guardar Cambios</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Se incluye el layout del footer -->
<%- include('layouts/footerClaim') %>