<!-- Se incluye el layout del header -->
<%- include('layouts/header') %>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Datos</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/sistema">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Datos</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Editar Empresa</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">
                <form method="POST" action="/sistema/update-company">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="ibox">
                                <div class="form-control">
                                    <% if ((company.cedula_empresa === null) || (company.cedula_empresa === '')) { %>
                                        <div class="form-group row"><label class="col-sm-2 col-form-label">Cédula/Rif</label>
                                            <div class="col-sm-10">
                                                <input 
                                                    type="text"
                                                    name="rif_empresa"
                                                    id="rif_empresa"
                                                    value="<%= company.rif_empresa %>"
                                                    class="form-control"
                                                    required
                                                >
                                            </div>
                                        </div>
                                    <% } else { %>
                                        <div class="form-group row"><label class="col-sm-2 col-form-label">Cédula/Rif</label>
                                            <div class="col-sm-10">
                                                <input 
                                                    type="text"
                                                    name="cedula_empresa"
                                                    id="cedula_empresa"
                                                    value="<%= company.cedula_empresa %>" 
                                                    class="form-control"
                                                    required
                                                >
                                            </div>
                                        </div>
                                    <% } %>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Nombre</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="nombre_empresa"
                                                id="nombre_empresa" 
                                                value="<%= company.nombre_empresa %>"
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Dominio</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="dominio_empresa"
                                                id="dominio_empresa"
                                                value="<%= company.dominio %>"
                                                class="form-control" 
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Email</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="email"
                                                name="email_empresa"
                                                id="email_empresa" 
                                                value="<%= company.correo_empresa %>"
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>                                    
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">País</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="pais_empresa"
                                                id="pais_empresa"
                                                value="<%= company.pais_empresa %>"
                                                class="form-control"
                                                required 
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Dirección</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="direccion_empresa"
                                                id="direccion_empresa"
                                                value="<%= company.direccion_empresa %>"
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Comisión</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="number"
                                                step="0.01"
                                                name="comision_empresa"
                                                id="comision_empresa"
                                                value="<%= company.porcentaje_empresa %>"
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Días</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="date"
                                                name="dias_renovacion_empresa"
                                                id="dias_renovacion_empresa" 
                                                value="<%= fecha %>" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="ibox">
                                <div class="form-control">
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Teléfono</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="telefono_empresa"
                                                id="telefono_empresa" 
                                                value="<%= company.telefono_empresa %>" 
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Teléfono</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="text"
                                                name="telefono_opcional"
                                                id="telefono_opcional" 
                                                value="<%= company.telefono_opcional %>" 
                                                class="form-control"
                                            >
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label">Factor Retención</label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="number"
                                                step="0.0001"
                                                name="factor_empresa"
                                                id="factor_empresa" 
                                                value="<%= company.factor_retencion %>"  
                                                class="form-control"
                                                required
                                            >
                                        </div>
                                    </div>
                                    </br>
                                    <div class="form-group row"><label class="col-sm-2 col-form-label"></label>
                                        <div class="col-sm-10">
                                            <input 
                                                type="hidden"
                                                name="id_empresa"
                                                id="id_empresa" 
                                                value="<%= company.id_empresa %>" 
                                                class="form-control"
                                            >
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a href="/sistema/company" class="btn btn-white btn-sm">Cancelar</a>
                            <button class="btn btn-primary btn-sm" type="submit">Guardar Cambios</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Se incluye el layout del footer -->
<%- include('layouts/footer') %>