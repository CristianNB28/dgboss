<script>
var lista = <%- JSON.stringify(data) %>;
var tablaPrimaCobrada = null;
$(document).ready(function(){
    tablaPrimaCobrada = $('#tablaPrimasCobradas').DataTable({
        pageLength: 25,
        responsive: true,
        dom: '<"html5buttons"B>lTfgitp',
        processing: true,
        serverSide: false,
        columns: [
            {"data": "ownAgent"},
            {"data": "company"},
            {"data": "bouquetType"},
            {"data": "insurer"},
            {"data": "dateFrom"},
            {"data": "dateTo"},
            {"data": "premium"}
        ],
        buttons: [
            {extend: 'print',
                customize: function (win){
                    $(win.document.body).addClass('white-bg');
                    $(win.document.body).css('font-size', '10px');

                    $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
            }
            }
        ]
    });
    tablaPrimaCobrada.rows.add(lista);
    tablaPrimaCobrada.draw();
});
</script>

